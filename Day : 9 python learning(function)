# write a function to print the length of list
cities = ["kathmandu", "dhangadi", "mahendranagar", "baitadi", "daldeldhura"]
heroes = ["ironman", "superman", "spiderman", "benten"]
def print_len(list):
    print_len(list)

print(len(cities))
print(len(heroes))

# write a function to print the list in  a single line.

food = ["panipuri", "rasbari", "dalchamal", "rotitarkari"]
def print_len(list):
    for item in list:
        print  (item , end= " ")
print_len(food)    

#write a function to print the factorial of n.


def calc_fact(n):
    fact = 1
    for i in range(1, n+1):
        fact *= i
        i += 1
    print(fact)
calc_fact(6)

#convert usd into inr

def convertor(usd_valu):
    inr_valu = usd_valu * 83
    print(usd_valu, "USD=", inr_valu, "INR")
convertor(76)    

#write a program to input the number is odd or even in te string form.

num =int(input("Enter a number:"))
def check_num(num):
    if (num%2 ==0):
        print("even")
    else:
        print("odd")
check_num(num)            
